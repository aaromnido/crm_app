<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Clients</h1>
    <%= link_to 'New Client', new_client_path, class: 'btn btn-primary' %>
  </div>

  <% if @clients.any? %>
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-light">
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @clients.each do |client| %>
                <tr>
                  <td><%= client.name %></td>
                  <td><%= client.email %></td>
                  <td><%= client.phone %></td>
                  <td>
                    <%= link_to 'View', client, class: 'btn btn-sm btn-outline-primary' %>
                    <%= link_to 'Edit', edit_client_path(client), class: 'btn btn-sm btn-outline-secondary' %>
                    <%= link_to 'Delete', client, method: :delete, 
                        confirm: 'Are you sure?', 
                        class: 'btn btn-sm btn-outline-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info" role="alert">
      <h4 class="alert-heading">No clients yet!</h4>
      <p>Start by creating your first client.</p>
      <%= link_to 'Create First Client', new_client_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
