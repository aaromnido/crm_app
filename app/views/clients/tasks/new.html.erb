<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header">
          <h1 class="h4 mb-0">New Task for <%= @client.name %> <%= "(\#{@opportunity.title})" if @opportunity %></h1>
        </div>
        <div class="card-body">
          <%= render 'form', client: @client, opportunity: @opportunity, task: @task %>
        </div>
      </div>
    </div>
  </div>
</div>
