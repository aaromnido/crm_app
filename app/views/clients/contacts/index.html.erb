<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Contacts for <%= @client.name %></h1>
    <%= link_to 'New Contact', new_client_contact_path(@client), class: 'btn btn-primary' %>
  </div>

  <% if @contacts.any? %>
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-light">
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Position</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @contacts.each do |contact| %>
                <tr>
                  <td><%= contact.name %></td>
                  <td><%= contact.email %></td>
                  <td><%= contact.phone %></td>
                  <td><%= contact.position %></td>
                  <td>
                    <%= link_to 'View', client_contact_path(@client, contact), class: 'btn btn-sm btn-outline-primary' %>
                    <%= link_to 'Edit', edit_client_contact_path(@client, contact), class: 'btn btn-sm btn-outline-secondary' %>
                    <%= link_to 'Delete', client_contact_path(@client, contact), method: :delete,
                        confirm: 'Are you sure?',
                        class: 'btn btn-sm btn-outline-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info" role="alert">
      <h4 class="alert-heading">No contacts yet!</h4>
      <p>Start by creating your first contact for this client.</p>
      <%= link_to 'Create First Contact', new_client_contact_path(@client), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
