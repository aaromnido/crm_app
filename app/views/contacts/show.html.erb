<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h1 class="h4 mb-0"><%= @contact.name %></h1>
          <div>
            <%= link_to 'Edit', edit_contact_path(@contact), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Back', contacts_path, class: 'btn btn-secondary btn-sm' %>
          </div>
        </div>
        <div class="card-body">
          <p><strong>Client:</strong> <%= @contact.client.name if @contact.client %></p>
          <p><strong>Email:</strong> <%= @contact.email %></p>
          <p><strong>Phone:</strong> <%= @contact.phone %></p>
          <p><strong>Position:</strong> <%= @contact.position %></p>
        </div>
      </div>
    </div>
  </div>
</div>
