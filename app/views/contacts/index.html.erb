<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">All Contacts</h1>
    <%= link_to 'New Contact', new_contact_path, class: 'btn btn-primary' %>
  </div>

  <% if @contacts.any? %>
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-light">
              <tr>
                <th>Name</th>
                <th>Client</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Position</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @contacts.each do |contact| %>
                <tr>
                  <td><%= contact.name %></td>
                  <td><%= contact.client.name if contact.client %></td>
                  <td><%= contact.email %></td>
                  <td><%= contact.phone %></td>
                  <td><%= contact.position %></td>
                  <td>
                    <%= link_to 'View', contact, class: 'btn btn-sm btn-outline-primary' %>
                    <%= link_to 'Edit', edit_contact_path(contact), class: 'btn btn-sm btn-outline-secondary' %>
                    <%= link_to 'Delete', contact, method: :delete,
                        confirm: 'Are you sure?',
                        class: 'btn btn-sm btn-outline-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info" role="alert">
      <h4 class="alert-heading">No contacts yet!</h4>
      <p>Start by creating your first contact.</p>
      <%= link_to 'Create First Contact', new_contact_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
